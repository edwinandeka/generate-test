{
    "name": "jest-generator",
    "displayName": "Jest Generator",
    "description": "Generate a file with some test depend on .ts file  ",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.54.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.jestGeneratorEka"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.jestGeneratorEka",
                "title": "Jest - Generate tests"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.jestGeneratorEka",
                    "when": "resourceFilename =~ /.ts$/",
                    "group": "miGrupo"
                }
            ]
        }
    },
    "scripts": {
        "package": "vsce package"
    },
    "devDependencies": {
        "typescript": "^4.1.3",
        "vscode-test": "^1.4.0",
        "@types/node": "^14.0.0",
        "@types/mocha": "^8.0.3"
    }
}
